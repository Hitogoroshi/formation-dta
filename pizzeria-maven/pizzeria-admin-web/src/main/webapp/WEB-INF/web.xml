<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
    <filter>
	<filter-name>SessionFilter</filter-name>
	<filter-class>dta.SessionFilter</filter-class>
</filter>
  <filter-mapping>
	<filter-name>SessionFilter</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>
  
  <servlet>
  	<servlet-name>MaServlet</servlet-name>
  	<servlet-class>dta.MaServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListerPizzaController</servlet-name>
  	<servlet-class>dta.ListerPizzaController</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>DeletePizzaController</servlet-name>
  	<servlet-class>dta.DeletePizzaController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>NouvellePizzaController</servlet-name>
  	<servlet-class>dta.NouvellePizzaController</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>EditPizzaController</servlet-name>
  	<servlet-class>dta.EditPizzaController</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>ConnectionController</servlet-name>
  	<servlet-class>dta.ConnectionController</servlet-class>
  </servlet>

  
  <servlet-mapping>
    <servlet-name>MaServlet</servlet-name>
  	<url-pattern>/maservlet</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>ListerPizzaController</servlet-name>
  	<url-pattern>/listPizza</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeletePizzaController</servlet-name>
  	<url-pattern>/deletePizza</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NouvellePizzaController</servlet-name>
  	<url-pattern>/newpizza</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditPizzaController</servlet-name>
  	<url-pattern>/editPizza</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>ConnectionController</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
</web-app>
